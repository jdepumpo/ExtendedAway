<%= render "shared/modals/new_modal", modal: "trip", model: @new_trip %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">My Trips</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <button type="button" class="btn btn-primary my-2" data-bs-toggle="modal" data-bs-target="#newModal">
      Add a new trip
    </button>
  </div>
</div>

<% @trips.each do |trip| %>

<div class="card mt-3">
  <div class="card-header d-flex align-items-center">
    <div class="flex-grow-1">
    <h5><strong><%= trip.name %></strong></h5>
    </div>
    <div>
      <%= link_to trip_path(trip.id), class: "card-link btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-regular fa-trash-can"></i>
      <% end %>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newModal">
        <i class="fa-regular fa-pen-to-square"></i>
      </button>
    </div>
  </div>
  <div class="card-body">
    <h5>
      <i class="fa-solid fa-calendar-days text-primary"></i>
      <%= trip.start_date.strftime('%a %d %b %Y') %> â€” <%= trip.end_date.strftime('%a %d %b %Y') %>
    </h5>
    <p class="card-text"><%= trip.description %></p>
    <%= link_to "Open", trip_path(trip.id), class: "btn btn-primary" %>
  </div>
</div>
<% end %>
