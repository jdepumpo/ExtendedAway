<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag %>
    <title>ExtendedAway</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  </head>

  <body style="min-height: 100vh; padding-top: 5px; position: relative">
    <%= render "shared/flashes" %>
    <% if (controller_name == "sessions" && action_name == "new") %>
      <%= yield %>
    <% elsif (params[:controller] == "pages" && params[:action] == "home") %>
        <%= yield %>
      <%= render "shared/flashes" %>
      <%= render "shared/footer" %>
    <% else %>
      <%= render "shared/navbar" %>
      <%= render "shared/userinfo" if current_user %>
      <main class="container" style="min-height: 65vh; padding-bottom: 175px;">
        <%= yield %>
      </main>
      <%= render "shared/flashes" %>
      <%= render "shared/footer" %>
    <% end %>
  </body>
</html>
