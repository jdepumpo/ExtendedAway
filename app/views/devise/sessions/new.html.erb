	<div class="form-container sign-in-container">
    <h1>Login</h1>
			<div class="social-container">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), method: :post do %>
            <i class="fab fa-facebook-f"></i>
          <% end %>
        <% end %>
      <% end %>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form_signin",
  data: {turbo: false}) do |f| %>
    <div class="social-container-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "sign_in_input" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "sign_in_input" }, class: "sign_in_input" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "form_signin_button" %>
<% end %>
  </div>

	</div>
