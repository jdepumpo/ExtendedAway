    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "First name", class: "sign_in_input" } %>
        <%= f.input :last_name,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Last name", class: "sign_in_input" } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "sign_in_input" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "sign_in_input" } %>
